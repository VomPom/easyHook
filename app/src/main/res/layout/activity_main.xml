<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.zhaol.easyhook.MyEditText
        android:id="@+id/packageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:hint="请输入包名" />

    <com.zhaol.easyhook.MyEditText
        android:id="@+id/className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:hint="请输入类名" />

    <Spinner
        android:id="@+id/hookType"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>

    <com.zhaol.easyhook.MyEditText
        android:id="@+id/methodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:hint="请输入方法名" />

    <com.zhaol.easyhook.MyEditText
        android:id="@+id/paramList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:hint="请输入参数，逗号隔开" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="常见参数类型："/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/string"
                android:id="@+id/stringBt"
                android:textSize="8dp"/>
            <Button
                android:id="@+id/intBt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="int"
                android:textSize="8dp" />

            <Button
                android:id="@+id/byteBt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="byte[]"
                android:textSize="8dp" />

            <Button
                android:id="@+id/booleanBt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="boolean"
                android:textSize="8dp" />

            <Button
                android:id="@+id/shortBt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="short"
                android:textSize="8dp" />

            <Button
                android:id="@+id/longBt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="long"
                android:textSize="8dp" />

            <Button
                android:id="@+id/doubleBt"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="double"
                android:textSize="8dp" />

            <Button
                android:id="@+id/floatBt"
                android:layout_width="65dp"
                android:height="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="float"
                android:textSize="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"/>

        <Button
            android:id="@+id/showFloat"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬浮窗" />

        <!--        <Button-->
        <!--            android:id="@+id/clear"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="30dp"-->
        <!--            android:text="清空结果"-->
        <!--            android:layout_marginStart="30dp" />-->
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip"/>
</LinearLayout>